<div data-controller="modal datepicker">
  <button data-action="click->modal#on" class="divide-border flex w-full appearance-none justify-center divide-x rounded ltr:text-left rtl:divide-x-reverse rtl:text-right md:w-auto md:gap-2 lg:gap-3">
    <div class="flex w-32 items-end justify-center md:w-auto md:ltr:pl-2 md:ltr:first-of-type:pl-0 md:rtl:pr-2 md:rtl:first-of-type:pr-0">
      <span class="text-primary pr-1 text-5xl font-bold tabular-nums leading-none rtl:pl-1">
        <%= reservation.check_in.strftime("%-d") %>
      </span>
      <div class="flex flex-col">
        <span class="block font-bold uppercase tabular-nums leading-none">
          <%= reservation.check_in.strftime("%b") %>
        </span>
        <span class="block uppercase tabular-nums">
          <%= reservation.check_in.strftime("%^a") %>
        </span>
      </div>
    </div>
    <div class="flex w-32 items-end justify-center md:w-auto md:ltr:pl-2 md:ltr:first-of-type:pl-0 md:rtl:pr-2 md:rtl:first-of-type:pr-0">
      <span class="text-primary pr-1 text-5xl font-bold tabular-nums leading-none rtl:pl-1">
        <%= reservation.check_out.strftime("%-d") %>
      </span>
      <div class="flex flex-col">
        <span class="block font-bold uppercase tabular-nums leading-none">
          <%= reservation.check_out.strftime("%b") %>
        </span>
        <span class="block uppercase tabular-nums">
          <%= reservation.check_out.strftime("%^a") %>
        </span>
      </div>
    </div>
  </button>

  <div data-action="click->modal#off" data-modal-target="modal" id="calendarModal" class="hidden modal fixed z-10 top-0 right-0 w-full h-full overflow-auto pt-32 bg-neutral-600/50">
    <div data-modal-target="content" class="relative m-auto p-0 border w-3/5 bg-white rounded">
      <%= render "calendar", start_date: reservation.check_in%>
      <%= render "calendar", start_date: reservation.check_in.beginning_of_month.next_month %>
    </div>
  </div>
</div>
