<%= form_with(model: reservation, url: available_rooms_reservations_path, id: "new_reservation", class: "relative flex flex-wrap items-end justify-center gap-3 lg:flex-nowrap", data: { turbo: false }) do |form| %>
  <% if reservation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(reservation.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
        <% reservation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render "datepicker", form: form, reservation: reservation %>
  <%= form.date_field :check_in, class: "hidden" %>
  <%= form.date_field :check_out, class: "hidden" %>

  <div>
    <button class="text-blue-900 bg-white font-semibold py-2 px-4 hover:font-bold border border-gray-500 rounded shadow md:w-auto md:flex-1"> Guests </button>
  </div>
  <div>
    <%= form.submit "Check Rooms and Rates", { class: "hover:cursor-pointer bg-blue-900 text-white font-semibold py-2 px-4 border-gray-500 rounded shadow md:w-auto md:flex-1" } %>
  </div>
<% end %>
