<h1> Available Rooms </h1>
<div id="rooms">
  <% @rooms.each do |room| %>
    <div class="room">
      <h2><%= room.room_number %></h2>
      <p><%= room.room_type %></p>
      <%= form_for(@reservation) do |f| %>
        <%= f.hidden_field :room_id, value: room.id %>
        <%= f.date_field :check_in, class: "hidden" %>
        <%= f.date_field :check_out, class: "hidden" %>
        <%= f.submit "Reserve", { class: "hover:cursor-pointer bg-blue-900 text-white font-semibold py-2 px-4 border-gray-500 rounded shadow md:w-auto md:flex-1" } %>
      <% end %>
    </div>
  <% end %>
</div>
